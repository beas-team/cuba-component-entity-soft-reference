<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.entitysoftreference.web.example.comment.CommentEdit"
        datasource="commentsDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.entitysoftreference.web.example.comment">
    <dsContext>
        <datasource id="commentsDs"
                    class="de.diedavids.cuba.entitysoftreference.example.Comment"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="commentsDs">
            <column width="250px">
                <field property="text"/>
                <field property="commentable"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
