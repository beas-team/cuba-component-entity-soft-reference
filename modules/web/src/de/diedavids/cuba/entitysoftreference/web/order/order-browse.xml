<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="de.diedavids.cuba.entitysoftreference.web.order.OrderBrowse"
        focusComponent="ordersTable"
        lookupComponent="ordersTable"
        messagesPack="de.diedavids.cuba.entitysoftreference.web.order">
    <dsContext>
        <groupDatasource id="ordersDs"
                         class="de.diedavids.cuba.entitysoftreference.example.Order"
                         view="_local">
            <query>
                <![CDATA[select e from ddcesf$Order e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <filter id="filter"
                applyTo="ordersTable"
                datasource="ordersDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="ordersTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="countComments" caption="Count comments" invoke="countComments"/>
                <action id="showComments" caption="Show comments" invoke="showComments"/>
            </actions>
            <columns>
                <column id="orderDate"/>
            </columns>
            <rows datasource="ordersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="ordersTable.create"/>
                <button id="editBtn"
                        action="ordersTable.edit"/>
                <button id="removeBtn"
                        action="ordersTable.remove"/>
                <button id="countCommentsBtn"
                        action="ordersTable.countComments"/>
                <button id="showCommentsBtn"
                        action="ordersTable.showComments"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
