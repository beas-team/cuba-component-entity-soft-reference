<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.entitysoftreference.web.order.OrderEdit"
        datasource="orderDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.entitysoftreference.web.order">
    <dsContext>
        <datasource id="orderDs"
                    class="de.diedavids.cuba.entitysoftreference.example.Order"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">

        <buttonsPanel>
            <button id="createComment"
                    caption="Create Comment"
                    invoke="createComment"/>
        </buttonsPanel>
        <fieldGroup id="fieldGroup"
                    datasource="orderDs">
            <column width="250px">
                <field property="orderDate"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
