<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="de.diedavids.cuba.softentityreference.web.notable.NotableEdit"
        datasource="notableDs"
        focusComponent="fieldGroup"
        messagesPack="de.diedavids.cuba.softentityreference.web.notable">
    <dsContext>
        <datasource id="notableDs"
                    class="de.diedavids.cuba.softentityreference.entity.Notable"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="notableDs">
            <column width="250px">
                <field property="text"/>
                <field property="notable"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
